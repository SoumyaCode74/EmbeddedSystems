#define RCC_BASE_ADDRESS 0x40023800
#define GPIOD_BASE_ADDRESS 0x40020C00

#include <stdint.h>
#include <stdio.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{
    /* Loop forever */
//	uint32_t* clock_en = (uint32_t*)RCC_BASE_ADDRESS + 0x30;
	uint32_t* clock_en = (uint32_t*)0x40023830;
//	uint32_t* portd_mode = (uint32_t*)GPIOD_BASE_ADDRESS + 0x00;
	uint32_t* portd_mode = (uint32_t*)0x40020C00;
//	uint32_t* portd_output_data = (uint32_t*)GPIOD_BASE_ADDRESS + 0x14;
	uint32_t* portd_output_data = (uint32_t*)0x40020C14;

	*clock_en |= 0x08;  //Set bit field 3 for GPIODEN in RCC_AHB1ENR
	*portd_mode |= 0x04000000; //Set GPIOD_MODER13 section of GPIOD_MODER to 01 (General output)
	*portd_output_data |= 0x00002000; //Write 1 to PD13
	printf("Value of GPIOD_ODR is %ld\n",*portd_output_data);
	for(;;);
}
